# AF vs Ctrl
metadata$HAF <-  NA
metadata$HAF[which(str_detect(metadata$group_id, "^Ctrl_"))] <- "Ctrl"
metadata$HAF[which(str_detect(metadata$group_id, "^AF_"))] <- "AF"
# Run the script on all clusters comparing stim condition relative to control condition
map(1:length(clusters), get_dds_results, metadata_subset = metadata, fname = "AF_Ctrl")

# left vs right
metadata$HAF <-  NA
metadata$HAF[which(str_detect(metadata$group_id, "left"))] <- "left"
metadata$HAF[which(str_detect(metadata$group_id, "right"))] <- "right"
map(1:length(clusters), get_dds_results, metadata_subset = metadata, fname = "left_right")

# AF_left vs Ctrl_left
metadata$HAF <-  NA
metadata_subset <- subset(metadata, metadata$group_id %in% c("AF_left","Ctrl_left"))
metadata_subset$HAF[which(str_detect(metadata_subset$group_id, "^Ctrl_"))] <- "Ctrl"
metadata_subset$HAF[which(str_detect(metadata_subset$group_id, "^AF_"))] <- "AF"
map(1:length(clusters), get_dds_results, metadata_subset = metadata_subset, fname = "AFleft_Ctrlleft")

